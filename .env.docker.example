# Docker Environment Configuration Template
# Copy this file to .env.docker and fill in your actual values

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@host:5432/database_name
# Alternative AWS database URL
AWS_DATABASE_URL=postgresql://username:password@host:5432/database_name

# Session Security (REQUIRED)
SESSION_SECRET=your-secure-session-secret-here-minimum-32-characters

# Email Service Configuration (REQUIRED for full functionality)
GMAIL_EMAIL=your-gmail-address@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# OpenAI Integration (OPTIONAL - for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Application Configuration
NODE_ENV=production
PORT=5000

# Optional: Disable composite foreign keys if needed
DISABLE_COMPOSITE_FK=false