# Environment configuration for CareConnect CRM
# Copy to .env and configure values

# Application Environment
NODE_ENV=development
PORT=5000
APP_BASE_URL=http://localhost:5000
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
TZ=Australia/Melbourne

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/careconnect

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# JWT Configuration
JWT_ISSUER=careconnect
JWT_AUDIENCE=careconnect-users

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_USER=your-email@domain.com
EMAIL_SMTP_PASS=your-app-password

# Frontend Environment Variables (must start with VITE_)
VITE_APP_API_URL=http://localhost:5000
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key