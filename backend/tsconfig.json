{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", 
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": "../",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "noEmitOnError": false,
    "allowImportingTsExtensions": false,
    "allowJs": true,
    "checkJs": false,
    "types": ["node"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "../server/**/*",
    "../shared/**/*",
    "../backend/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../client/**/*",
    "../node_modules",
    "../dist/**/*"
  ]
}